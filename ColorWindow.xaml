<Window x:Name="MainColorWindow" x:Class="WordCards_WPF.ColorWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:WordCards_WPF"
             mc:Ignorable="d" Width="300" Height="137">
    <Grid Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="115*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="OkButton" Content="Ok" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75" Click="OkButton_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="CancelButton_Click" Grid.Column="1"/>
        <xctk:ColorPicker x:Name="ColorPicker" Margin="10,30,10,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
