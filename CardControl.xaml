<UserControl x:Class="WordCards_WPF.CardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WordCards_WPF"
             mc:Ignorable="d" VerticalAlignment="Top">
    <Grid MinHeight="120" MinWidth="200">
        <Canvas x:Name="CardCanvas">
            
        </Canvas>
        <DockPanel Height="120" LastChildFill="False" VerticalAlignment="Top">
            <Rectangle Fill="#FFF5E96D" Height="100" Canvas.Left="513" Stroke="Black" Canvas.Top="204" MinHeight="40" ForceCursor="True" MinWidth="100" DockPanel.Dock="Top" Margin="10">
                <Rectangle.Effect>
                    <DropShadowEffect ShadowDepth="7" Opacity="0.205"/>
                </Rectangle.Effect>
            </Rectangle>
        </DockPanel>

    </Grid>
</UserControl>
