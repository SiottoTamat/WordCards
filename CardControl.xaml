<UserControl x:Class="WordCards_WPF.CardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WordCards_WPF"
             mc:Ignorable="d" VerticalAlignment="Top">
    <Grid MinHeight="80" MinWidth="200">

        <DockPanel x:Name="CardDockPanel" Height="80" LastChildFill="False" VerticalAlignment="Top">

            <Canvas x:Name="CardCanvas" Height="75" DockPanel.Dock="Top" Margin="10,5,10,0"  Background="#FFFFEF4E" MouseLeftButtonDown="CardCanvas_MouseLeftButtonDown" >
                <Canvas.ToolTip>
                    <ToolTip x:Name="TooltipCard">
                        <TextBlock x:Name="TooltipTextBlock">None</TextBlock>
                    </ToolTip>
                </Canvas.ToolTip>
                <Canvas.Effect>
                    <DropShadowEffect Opacity="0.4"/>
                </Canvas.Effect>
                <Grid x:Name="CardGrid" Height="{Binding ActualHeight, RelativeSource={RelativeSource FindAncestor, AncestorType=Canvas}}" Width="{Binding ActualWidth, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType=Canvas}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width=".5*"/>
                        <ColumnDefinition Width="1*"/>

                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.8*" />
                        <RowDefinition Height="1.8*" />



                        <RowDefinition Height="3.5*" />
                    </Grid.RowDefinitions>

                    <Label x:Name="Text"  Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" Grid.RowSpan="5" BorderBrush="#4C000000" BorderThickness="1" Background="#00000000" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="2">
                        <TextBlock x:Name="TextBlock" TextTrimming="CharacterEllipsis">Label</TextBlock>
                    </Label>
                    <Viewbox Grid.Column="0" Grid.ColumnSpan="1" Grid.Row="0" HorizontalAlignment="Right">
                        <Label x:Name="Bookmark" Content="Bookmark: "    Background="#00000000"  />
                    </Viewbox>
                    <Viewbox Grid.Column="1"  Grid.Row="0" HorizontalAlignment="Left">
                        <Label x:Name="BookmarkName" Content="NONE"   Background="#00000000" />
                    </Viewbox>
                    <Viewbox Grid.Column="3"  Grid.Row="0" HorizontalAlignment="Right">
                        <Label x:Name="W" Content="w:"   Background="#00000000" />
                    </Viewbox>
                    <Viewbox Grid.Column="3"  Grid.Row="1" HorizontalAlignment="Right">
                        <Label x:Name="P" Content="p:"   Background="#00000000" />
                    </Viewbox>
                    <Viewbox Grid.Column="4"  Grid.Row="0" HorizontalAlignment="Left">
                        <Label x:Name="Wordcount" Content="0"   Background="#00000000" />
                    </Viewbox>
                    <Viewbox Grid.Column="4"  Grid.Row="1" HorizontalAlignment="Left">
                        <Label x:Name="Pages" Content="0"   Background="#00000000" />
                    </Viewbox>
                    <Viewbox Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="3" Grid.RowSpan="2" HorizontalAlignment="Right">
                        <Label x:Name="Id" Content="1"   Background="#00000000" />
                    </Viewbox>
                </Grid>        

            </Canvas>

        </DockPanel>

    </Grid>
</UserControl>
