<UserControl x:Class="WordCards_WPF.UserControlWPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WordCards_WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="WPFUserControl">

        <DockPanel x:Name="GeneraldockPanel" LastChildFill="False" Margin="0" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
            <GroupBox x:Name="Word_Cards" Header="" Height="100" VerticalAlignment="Top" DockPanel.Dock="Top" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
                <Button x:Name="AddCard" Content="Add Card" HorizontalAlignment="Left" Height="28" Margin="10,44,0,0" VerticalAlignment="Top" Width="75" Background="#FFDDDDDD" Click="AddCard_Click"/>
            </GroupBox>
            <ScrollViewer x:Name="StackPanelScrollViewer" VerticalScrollBarVisibility="Auto" Width="{Binding ActualWidth, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:UserControlWPF}}}">
                <StackPanel x:Name="StackPanel" Background="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" MinWidth="100" Margin="0" Width="{Binding Path=ViewportWidth, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType=ScrollViewer}}"/>
            </ScrollViewer>
        </DockPanel>

    </Grid>
</UserControl>
