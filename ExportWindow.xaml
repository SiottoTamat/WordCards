<Window x:Name="WindowExport" x:Class="WordCards_WPF.ExportWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WordCards_WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Title="Copy/Paste Text Below">
    <Grid>
        <Grid Margin="2">
            
            <RichTextBox x:Name="RichTextBox" Grid.ColumnSpan="3" Margin="5,5,5,5" VerticalScrollBarVisibility="Auto">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="RichTextBox"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            
        </Grid>

    </Grid>
</Window>
